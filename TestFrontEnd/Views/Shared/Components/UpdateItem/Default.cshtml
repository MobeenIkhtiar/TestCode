@model Frontend.Web.Models.TaskSetup.BackEndTaskModel
<form id="addMultipleUserForm" asp-action="Update" asp-controller="Dashboard" method="post">
    <div class="mb-3">
        <input type="hidden" class="form-control" id="Id" name="id" asp-for="@Model.PutModel.Id">
        <label for="Title" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" asp-for="@Model.PutModel.Name" placeholder="Enter Item Name" autocomplete="off" required>
        <div class="invalid-feedback" id="gradeError">Invlaid Grade</div>
    </div>
    <button type="submit" class="btn btn-success" id="addUserSubmitBtn">Save</button>
</form>